<PropertyList>

<particlesystem>
   <name>puff</name>
   <texture>puff.png</texture>

   <placer>
     <type>point</type> 
   </placer>

   <shooter>
     <theta-min-deg>-1.5</theta-min-deg>
     <theta-max-deg>1.5</theta-max-deg>
     <phi-min-deg>-1.5</phi-min-deg>
     <phi-max-deg>1.5</phi-max-deg>

     <speed-mps>
       <value>35</value>
       <spread>0</spread>
     </speed-mps>

     <rotation-speed>
       <x-min-deg-sec>0</x-min-deg-sec>
       <y-min-deg-sec>0</y-min-deg-sec>
       <z-min-deg-sec>0</z-min-deg-sec>
       <x-max-deg-sec>0</x-max-deg-sec>
       <y-max-deg-sec>0</y-max-deg-sec>
       <z-max-deg-sec>0</z-max-deg-sec>
     </rotation-speed>
   </shooter>

   <counter>
     <particles-per-sec>
       <value>20</value>
       <spread>0</spread>
     </particles-per-sec>
   </counter>

   <align>billboard</align>

   <particle>

     <start>
       <size>
         <value>1</value>
       </size>
     </start>

     <end>
       <size>
         <value>0.5</value>
       </size>
     </end>

     <life-sec>
       <value>10</value>
     </life-sec>

     <mass-kg>  0.0 </mass-kg>
     <radius-m> 1.0 </radius-m>

   </particle>

   <program>
     <fluid>               air  </fluid>
     <gravity type="bool"> true </gravity>
     <wind typ="bool">     true </wind>
   </program>

 </particlesystem>

</PropertyList>
